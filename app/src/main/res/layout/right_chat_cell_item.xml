<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cell_container_right"
        android:layout_width="wrap_content"
        android:layout_gravity="end"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/cell_sender_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:backgroundTint="@color/white"
            android:gravity="end"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/cell_chat_right"
            app:layout_constraintEnd_toEndOf="@+id/cell_chat_right"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="David" />

        <TextView
            android:id="@+id/cell_date_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:backgroundTint="@color/white"
            android:gravity="end"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/cell_chat_right"
            app:layout_constraintEnd_toStartOf="@+id/cell_chat_right"
            app:layout_constraintTop_toTopOf="@+id/cell_chat_right"
            tools:text="19.05" />

        <TextView
            android:id="@+id/cell_chat_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/chat_rounded_bg"
            android:gravity="center"
            android:padding="12dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle=""
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cell_sender_right"
            tools:text="Innholdet i cellen" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>